<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.kt.cloud</groupId>
    <artifactId>kt-cloud-code-project</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <modules>
        <module>kt-cloud-code-project-infrastructure</module>
        <module>kt-cloud-code-project-domain</module>
        <module>kt-cloud-code-project-client</module>
        <module>kt-cloud-code-project-manager</module>
        <module>kt-cloud-code-project-service</module>
        <module>kt-cloud-code-project-app</module>
        <module>kt-cloud-code-project-adapter</module>
        <module>kt-cloud-code-project-start</module>
    </modules>
    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <kt.dependencies.version>1.0.0-SNAPSHOT</kt.dependencies.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>com.ibeetl</groupId>
            <artifactId>beetl</artifactId>
            <version>3.3.2.RELEASE</version>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-log4j2</artifactId>
        </dependency>

    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.kt</groupId>
                <artifactId>kt-dependencies</artifactId>
                <version>${kt.dependencies.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.kt.cloud</groupId>
                <artifactId>kt-cloud-code-project-adapter</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.kt.cloud</groupId>
                <artifactId>kt-cloud-code-project-domain</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.kt.cloud</groupId>
                <artifactId>kt-cloud-code-project-client</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.kt.cloud</groupId>
                <artifactId>kt-cloud-code-project-app</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.kt.cloud</groupId>
                <artifactId>kt-cloud-code-project-infrastructure</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.kt.cloud</groupId>
                <artifactId>kt-cloud-code-project-manager</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.kt.cloud</groupId>
                <artifactId>kt-cloud-code-project-service</artifactId>
                <version>${version}</version>
            </dependency>
        </dependencies>

    </dependencyManagement>

</project>